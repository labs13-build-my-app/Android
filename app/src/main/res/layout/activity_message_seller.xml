<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageSeller">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_master_message"
        android:layout_width="395dp"
        android:layout_height="600dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="#634CAF50"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/messageTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Text to {Dev_name}"
                android:textColor="@color/whiteBodyColor"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dev_pro"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/messageTo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/add_person" />

            <TextView
                android:id="@+id/Dev_Name_massage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageTo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/dev_pro"
                android:text="{Developer's Name}"
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/rating_ma"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/Dev_Name_massage"
                android:layout_toRightOf="@+id/dev_pro" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_message_ma"
                android:layout_width="380dp"
                android:layout_height="300dp"
                android:layout_below="@id/rating_ma"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="360dp"
                        android:layout_height="280dp"
                        android:layout_centerHorizontal="true"
                        android:hint="Type Your Message Here..."
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:layout_below="@+id/cardview_message_ma"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload File"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"

                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="395dp"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#634CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_master_message"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Submit"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>